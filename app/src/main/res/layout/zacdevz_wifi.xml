<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="me.dawson.proxyserver.ui.ProxySettings">

	<LinearLayout
	android:orientation="horizontal"
	
	android:layout_width="fill_parent"
	android:layout_height="55.0dip">

	<ImageView
		android:onClick="btnHardwareIDi"
		android:padding="15.0dip"
		android:layout_width="55.0dip"
		android:layout_height="55.0dip"
		android:src="@drawable/back_icon"
		app:tint="#ffffffff"/>

	<TextView
		android:textSize="15.0dip"
		android:textColor="#ffffffff"
		android:gravity="center|left"
		android:layout_width="fill_parent"
		android:layout_height="55.0dip"
		android:text="Hotspot Tether"/>

</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
        
        
        <androidx.cardview.widget.CardView
				android:layout_width="fill_parent"
				android:layout_height="60.0dip"
				android:layout_marginTop="10.0dip"
				android:layout_marginStart="10.0dip"
				android:layout_marginEnd="10.0dip"
				app:contentPadding="10.0dip">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">

					<com.google.android.material.textview.MaterialTextView
						android:gravity="center"
						android:id="@+id/tv_info"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"/>

				</LinearLayout>

			</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10.0dip"
			android:layout_marginBottom="10.0dip"
			android:layout_marginStart="10.0dip"
			android:layout_marginEnd="10.0dip"
			app:contentPadding="10.0dip">

			<LinearLayout
				android:gravity="center_vertical"
				android:layout_gravity="center"
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<Button
					android:onClick="btnHardwareID"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Hotspot Setting"
					android:layout_weight="1.0"
					android:layout_marginEnd="10.0dip"/>
                    
				<View
					android:background="?android:dividerHorizontal"
					android:layout_width="1.0dip"
					android:layout_height="fill_parent"/>

				<com.google.android.material.materialswitch.MaterialSwitch
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/cb_enable"/>

			</LinearLayout>

		</androidx.cardview.widget.CardView>
        
        <androidx.cardview.widget.CardView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="10.0dip"
				android:layout_marginEnd="10.0dip"
				app:contentPadding="10.0dip">

				<LinearLayout
					android:gravity="center"
					android:orientation="vertical"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content">

					<com.google.android.material.textview.MaterialTextView
						android:textAppearance="?android:textAppearanceSmall"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Guide:"/>

					<com.google.android.material.textview.MaterialTextView
						android:textAppearance="?android:textAppearanceSmall"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="1. Turn on Hotspot."/>

					<com.google.android.material.textview.MaterialTextView
						android:textAppearance="?android:textAppearanceSmall"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="2. Connect the other device (client) to the hotspot."/>

					<com.google.android.material.textview.MaterialTextView
						android:textAppearance="?android:textAppearanceSmall"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="3. On that device, modify the WiFi connection."/>

					<com.google.android.material.textview.MaterialTextView
						android:textAppearance="?android:textAppearanceSmall"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="4. Click Advanced Options."/>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">

						<com.google.android.material.textview.MaterialTextView
							android:textAppearance="?android:textAppearanceSmall"
							android:id="@+id/activitymainTextView1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="5 . Set to manual proxy:"
							android:textIsSelectable="true"/>

						<com.google.android.material.textview.MaterialTextView
							android:textAppearance="?android:textAppearanceSmall"
							android:textStyle="bold"
                            android:text=" Click Here"
							android:textColor="@color/colorPrimary"
							android:onClick="btnHardwareID2"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:paddingStart="5.0dip"/>

					</LinearLayout>

					<com.google.android.material.textview.MaterialTextView
						android:textAppearance="?android:textAppearanceSmall"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="6 . Click Save, and you are done."/>

					<com.google.android.material.textview.MaterialTextView
						android:textAppearance="?android:textAppearanceSmall"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10.0dip"
						android:text="You can now enjoy the VPN connection of the host device!"/>

				</LinearLayout>

			</androidx.cardview.widget.CardView>


	</LinearLayout>

</LinearLayout>

